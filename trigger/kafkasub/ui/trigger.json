{
  "name": "tibco-kafkasub",
  "type": "flogo:trigger",
  "ref": "github.com/TIBCOSoftware/flogo-contrib/trigger/kafkasub",
  "version": "0.0.1",
  "title": "Subscribe to a Kafka topic",
  "description": "Simple Kafka subscriber trigger",
 "settings":[
    {
      "name": "BrokerUrl",
      "type": "string"
    }
  ],
  "outputs": [
    {
      "name": "message",
      "type": "string"
    }
  ],
  "handler": {
    "settings": [
      {
        "name": "Topic",
        "type": "string"
      },
      {
        "name": "partitions",
        "type": "string"
      },
      {
        "name": "group",
        "type": "string"
      },
      {
        "name": "offset",
        "type": "int"
      },
      {
        "name": "user",
        "type": "string"
      },
      {
        "name": "password",
        "type": "string"
      },
      {
        "name": "truststore",
        "type": "string"
      }
    ]
  }
}
